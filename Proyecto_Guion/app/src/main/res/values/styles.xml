<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomFABStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="shapeAppearanceOverlay">@style/CustomFABShape</item>
        <item name="backgroundTint">@color/NaranjaBase</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="CustomFABShape" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">10dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeTopLeft">50dp</item>
        <item name="cornerSizeTopRight">10dp</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Dialog">
        <!-- Opcional: Personalización básica -->
        <item name="android:windowBackground">@color/VerdeOscuro</item>
        <item name="android:padding">16dp</item>
        <item name="android:windowMinWidthMajor">80%</item> <!-- Ajustar ancho mínimo -->
        <item name="android:windowMinWidthMinor">80%</item> <!-- Ajustar ancho mínimo -->
    </style>

</resources>