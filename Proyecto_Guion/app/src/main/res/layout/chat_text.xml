<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="2dp"
    >

    <TextView
        android:id="@+id/textViewNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/personaje"
        android:background="@drawable/boton_custom_rojo"
        android:gravity="right"
        android:layout_gravity="left"
        android:layout_marginBottom="-15dp"
        android:layout_marginStart="10dp"
        android:textStyle="bold"
        android:textColor="@color/VerdeOscuro"
        android:translationZ="1dp"
        />


    <TextView
        android:id="@+id/textViewMensaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/texto_dialogo_personaje"
        android:background="@drawable/chat_elenco_custom"
        android:gravity="right"
        android:padding="20dp"
        android:textStyle="normal"
        android:textColor="@color/Negro"
        android:textSize="16sp"
        android:layout_marginStart="5dp"
        android:layout_gravity="left"
        />

</LinearLayout>